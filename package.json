{
  "name": "nextjs-testing",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --env=jsdom --verbose"
  },
  "dependencies": {
    "autoprefixer": "^10.4.0",
    "axios": "^0.21.1",
    "msw": "^0.35.0",
    "next": "11.1.2",
    "next-page-tester": "^0.30.0",
    "postcss": "^8.3.11",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "^1.0.1",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.35",
    "babel-jest": "^27.3.1",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.4",
    "jest": "^27.3.1",
    "jest-css-modules": "^2.1.0",
    "typescript": "^4.4.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
